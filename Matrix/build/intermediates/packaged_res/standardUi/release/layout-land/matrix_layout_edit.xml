<?xml version="1.0" encoding="utf-8"?>
                                                                   

    

           

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp" android:tag="layout-land/matrix_layout_edit_0" xmlns:android="http://schemas.android.com/apk/res/android">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0.0dp"
            android:layout_weight="0.08">

            <LinearLayout
                android:id="@+id/back_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/device_back_image"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:scaleType="center"
                    android:src="@drawable/back_btn" />

                <TextView
                    android:id="@+id/deviceTypeName_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_matrix_scene"
                    android:textColor="@android:color/white"
                    android:textSize="22sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/btn_onclick_effect_blue"
                    android:paddingBottom="10dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:paddingTop="10dp"
                    android:text="@string/allClear"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/common_text_size_2" />

                <Button
                    android:id="@+id/preview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/btn_onclick_effect_blue"
                    android:paddingBottom="10dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:paddingTop="10dp"
                    android:text="@string/preview"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/common_text_size_2" />

                <Button
                    android:id="@+id/save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/btn_onclick_effect_blue"
                    android:paddingBottom="10dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:paddingTop="10dp"
                    android:text="@string/save"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/common_text_size_2" />

                <Button
                    android:id="@+id/cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/btn_onclick_effect_blue"
                    android:paddingBottom="10dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:paddingTop="10dp"
                    android:text="@string/cancel"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/common_text_size_2" />
            </LinearLayout>
        </RelativeLayout>

        <com.sunmnet.mediaroom.matrix.anotherUi.ui.MatrixTableLayout
            android:id="@+id/matrix_edit_table"
            android:layout_width="match_parent"
            android:layout_height="0.0dp"
            android:layout_marginTop="20dp"
            android:layout_weight="0.80"
            android:background="@drawable/radius_15_transparent_drawable">

        </com.sunmnet.mediaroom.matrix.anotherUi.ui.MatrixTableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.0dp"
            android:layout_marginTop="20dp"
            android:layout_weight="0.12"
            android:gravity="center">

            <GridView
                android:id="@+id/matrix_edit_gridview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:horizontalSpacing="10dp"
                android:numColumns="10"></GridView>
        </LinearLayout>

    </LinearLayout>
         