<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/grey_border"
    android:orientation="vertical"
    android:paddingLeft="@dimen/px_60"
    android:paddingTop="@dimen/px_50"
    android:paddingRight="@dimen/px_60"
    android:paddingBottom="@dimen/px_50">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/grey_bottom_border"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dp_5">

        <!--<ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:scaleType="fitCenter"
            android:src="@drawable/tabsp_login_edit_user" />-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/px_10"
            android:text="@string/name_account"
            android:textColor="?login_enter_input_title_main"
            android:textSize="@dimen/px_25" />

        <EditText
            android:id="@+id/user_name"
            android:layout_width="@dimen/px_200"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="left|center_vertical"
            android:hint="@string/name_please_account"
            android:minHeight="@dimen/px_18"
            android:paddingLeft="@dimen/dp_5"
            android:text="@={userInfo.user}"
            android:textColor="?attr/login_enter_tips_textcolor"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/px_25" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_7_5"
        android:background="@drawable/grey_bottom_border"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dp_5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/px_10"
            android:text="@string/name_password"
            android:textColor="?login_enter_input_title_main"
            android:textSize="@dimen/px_25" />

        <EditText
            android:id="@+id/user_password"
            android:layout_width="@dimen/px_200"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="left|center_vertical"
            android:hint="@string/name_please_password"
            android:inputType="textPassword"
            android:minHeight="@dimen/px_18"
            android:paddingLeft="@dimen/dp_5"
            android:text="@={userInfo.password}"
            android:textColor="?attr/login_enter_tips_textcolor"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/px_25" />

    </LinearLayout>

    <TextView
        android:id="@+id/loginResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_10"
        android:textColor="?error_text_color" />

    <TextView
        android:id="@id/switchLogintype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/px_50"
        android:background="@drawable/tabsp_login_enter_account_effect"
        android:gravity="center"
        android:paddingLeft="@dimen/px_122"
        android:paddingTop="@dimen/px_19"
        android:paddingRight="@dimen/px_122"
        android:paddingBottom="@dimen/px_19"
        android:text="@string/name_login"
        android:textColor="?attr/common_text_color"
        android:textSize="@dimen/px_25" />

</LinearLayout>