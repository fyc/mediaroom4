<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="@dimen/dp_288"
        android:layout_height="@dimen/dp_240"
        android:layout_gravity="center"
        android:background="@android:color/white"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/device_off_background"
            android:padding="@dimen/dp_5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="@string/tipes_device_rate"
                android:textColor="?device_black_text_color"
                android:textSize="@dimen/dp_10" />

            <ImageView
                android:id="@id/close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:src="@drawable/tabsp_opt_closing" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/rate_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/time_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="?device_black_text_color"
                android:textSize="@dimen/dp_15" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/tipes_rate_timeless_dismiss"
                android:textColor="?device_black_text_color"
                android:textSize="@dimen/dp_15" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:gravity="center">

            <Button
                android:id="@id/confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_5"
                android:background="@drawable/btn_enable_no_padding"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_7_5"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_7_5"
                android:text="@string/confirm"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dp_11" />

            <Button
                android:id="@id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_enable_no_padding"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_7_5"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_7_5"
                android:text="@string/cancel"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dp_11" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
