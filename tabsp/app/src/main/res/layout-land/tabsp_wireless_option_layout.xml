<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.0dp"
        android:layout_weight="0.3"
        android:background="@drawable/device_off_background"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/name_shown_mode"
            android:textColor="?device_black_text_color"
            android:textSize="@dimen/dp_13" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dp_5">

            <Button
                android:id="@+id/muiltiple"
                android:layout_width="0.0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_7_5"
                android:layout_weight="1"
                android:background="@drawable/wireless_option_click_effective"
                android:gravity="center"
                android:paddingTop="@dimen/dp_7_5"
                android:paddingBottom="@dimen/dp_7_5"
                android:text="@string/name_muiltiple"
                android:textColor="?device_black_text_color"
                android:textSize="@dimen/dp_12" />

            <Button
                android:id="@+id/singleton"
                android:layout_width="0.0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/wireless_option_click_effective"
                android:gravity="center"
                android:paddingTop="@dimen/dp_7_5"
                android:paddingBottom="@dimen/dp_7_5"
                android:text="@string/name_singleton"
                android:textColor="?device_black_text_color"
                android:textSize="@dimen/dp_12" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.0dp"
        android:layout_marginTop="@dimen/dp_0_5"
        android:layout_weight="0.4"
        android:background="@drawable/device_off_background"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:gravity="center"
            android:text="@string/name_broadcast_mode"
            android:textColor="?device_black_text_color"
            android:textSize="@dimen/dp_13" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp_7_5">

            <Button
                android:id="@+id/broadcast_all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/wireless_option_click_effective"
                android:gravity="center"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:text="@string/name_broadcast_all"
                android:textColor="?device_black_text_color"
                android:textSize="@dimen/dp_12" />

            <Button
                android:id="@+id/broadcast_part"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_7_5"
                android:layout_weight="1"
                android:background="@drawable/wireless_option_click_effective"
                android:gravity="center"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:text="@string/name_broadcast_part"
                android:textColor="?device_black_text_color"
                android:textSize="@dimen/dp_12" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0.0dp"
        android:layout_marginTop="@dimen/dp_0_5"
        android:layout_weight="0.3"
        android:background="@drawable/device_off_background"
        android:gravity="center"
        android:padding="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_5">

        <TextView
            android:id="@+id/finish"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/wireless_option_click_effective"
            android:gravity="center"
            android:text="@string/name_finish"
            android:textColor="?device_black_text_color"
            android:textSize="@dimen/dp_14" />
    </FrameLayout>
</LinearLayout>

