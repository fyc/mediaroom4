        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" android:tag="layout-land/tabsp_version2_discussion_layout_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="@dimen/px_20"
                android:layout_height="@dimen/px_20"
                android:layout_marginTop="@dimen/px_10"
                android:background="@drawable/circle_12px" />

            <TextView
                android:id="@+id/tagName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/px_10"
                android:textColor="?mediaroom4_menu_selected_color"
                android:textSize="?title_important_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_621"
            android:orientation="horizontal"
            android:padding="@dimen/px_20">

            <LinearLayout
                layout="@layout/tabsp_discussion_input_layout"
                android:layout_width="0.0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/discussion_background"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/px_30"
                    android:text="@string/tipes_please_select_lecture"
                    android:textColor="?device_black_text_color"
                    android:textSize="?title_important_text_size" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/px_30">

                    <GridView
                        android:id="@+id/inputGrid"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:tag="binding_1"          
                        android:horizontalSpacing="@dimen/px_221"
                        android:numColumns="2"
                        android:verticalSpacing="@dimen/px_50"></GridView>

                    <GridView
                        android:id="@+id/inputGroup"
                        android:layout_width="@dimen/px_200"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:tag="binding_2"               
                        android:numColumns="2"
                        android:verticalSpacing="@dimen/px_50"></GridView>
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                layout="@layout/tabsp_discussion_output_layout"
                android:layout_width="0.0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/px_20"
                android:layout_weight="1"
                android:background="@drawable/discussion_background"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/px_30"
                    android:text="@string/tipes_please_select_lecture"
                    android:textColor="?device_black_text_color"
                    android:textSize="?title_important_text_size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/px_30"
                    android:orientation="vertical">

                    <GridView
                        android:id="@+id/outputGrid"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="top"
                        android:layout_marginBottom="@dimen/px_20"
                        android:tag="binding_3"           
                        android:numColumns="3"></GridView>

                    <GridView
                        android:id="@+id/outputGroup"
                        android:layout_width="@dimen/px_200"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/px_50"
                        android:tag="binding_4"                
                        android:numColumns="2"
                        android:verticalSpacing="@dimen/px_50"></GridView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
         