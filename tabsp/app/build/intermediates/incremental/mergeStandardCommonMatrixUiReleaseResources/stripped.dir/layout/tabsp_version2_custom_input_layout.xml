<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/discussion_background"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/px_20"
        android:text="@string/tipes_please_select_lecture"
        android:textColor="?device_black_text_color"
        android:textSize="?title_important_text_size" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_521"
        android:layout_marginTop="@dimen/px_20">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:orientation="vertical">

            <FrameLayout
                layout="@layout/tabsp_version2_custom_discuss_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:tag="input1">

                <include
                    layout="@layout/tabsp_version2_custom_discuss_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="input1" />
            </FrameLayout>

            <FrameLayout
                layout="@layout/tabsp_version2_custom_discuss_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:tag="input2">

                <include
                    layout="@layout/tabsp_version2_custom_discuss_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </FrameLayout>

            <FrameLayout
                layout="@layout/tabsp_version2_custom_discuss_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:tag="input3">

                <include
                    layout="@layout/tabsp_version2_custom_discuss_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </FrameLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <FrameLayout
                    layout="@layout/tabsp_version2_custom_discuss_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/px_20"
                    android:tag="input4">

                    <include
                        layout="@layout/tabsp_version2_custom_discuss_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </FrameLayout>

                <FrameLayout
                    layout="@layout/tabsp_version2_custom_discuss_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="input5">

                    <include
                        layout="@layout/tabsp_version2_custom_discuss_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_20"
                android:orientation="horizontal">

                <FrameLayout
                    layout="@layout/tabsp_version2_custom_discuss_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/px_20"
                    android:tag="input6">

                    <include
                        layout="@layout/tabsp_version2_custom_discuss_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </FrameLayout>

                <FrameLayout
                    layout="@layout/tabsp_version2_custom_discuss_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="input7">

                    <include
                        layout="@layout/tabsp_version2_custom_discuss_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:orientation="vertical">

            <include
                layout="@layout/tabsp_version2_custom_discuss_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:tag="input8" />

            <FrameLayout
                layout="@layout/tabsp_version2_custom_discuss_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:tag="input9">

                <include
                    layout="@layout/tabsp_version2_custom_discuss_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </FrameLayout>

            <FrameLayout
                layout="@layout/tabsp_version2_custom_discuss_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:tag="input10">

                <include
                    layout="@layout/tabsp_version2_custom_discuss_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </FrameLayout>
        </FrameLayout>
    </FrameLayout>
</LinearLayout>
