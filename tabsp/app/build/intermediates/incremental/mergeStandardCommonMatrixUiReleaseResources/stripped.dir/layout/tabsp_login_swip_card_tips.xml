<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="@dimen/px_140"
        android:layout_height="@dimen/px_140"
        android:layout_gravity="center"
        android:scaleType="center"
        android:src="@drawable/activity_login_enter_cardswipe" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:text="@string/tips_swip_enter"
        android:textColor="?login_enter_tips_textcolor"
        android:textSize="?login_enter_tips_textsize" />

</LinearLayout>
