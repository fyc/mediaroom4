<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="#3250beff" android:startColor="#c950beff" android:type="linear" />
            <stroke android:width="1dp" android:color="#ff4fbdfe" />
            <corners android:radius="1dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="#9F46475E" android:startColor="#AF727298" android:type="linear" />
            <stroke android:width="1dp" android:color="#FF78798C" />
            <corners android:radius="1dp" />
        </shape>
    </item>
</selector>