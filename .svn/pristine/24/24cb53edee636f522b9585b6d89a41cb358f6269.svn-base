<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contentLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/round_rect_shadow"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dialog_padding_left_right"
    android:paddingTop="@dimen/dialog_padding_top"
    android:paddingRight="@dimen/dialog_padding_left_right"
    android:paddingBottom="@dimen/dialog_padding_bottom">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dialog_margin_top"
        android:minWidth="600dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学生姓名 "
            android:textColor="@color/search_default_color"
            android:textSize="@dimen/query_dialog_text_size" />

        <EditText
            android:id="@+id/text_studentName"
            android:layout_width="0.0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="2"
            android:background="@drawable/bg_input_query"
            android:padding="5dp"
            android:paddingLeft="10dp"
            android:tag="学生姓名："
            android:textColor="@color/search_textColor"
            android:textSize="@dimen/query_dialog_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dialog_margin_top"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="教师姓名 "
            android:textColor="@color/search_default_color"
            android:textSize="@dimen/query_dialog_text_size" />

        <EditText
            android:id="@+id/text_teacherName"
            android:layout_width="0.0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="2"
            android:background="@drawable/bg_input_query"
            android:padding="5dp"
            android:tag="教师姓名："
            android:textColor="@color/search_textColor"
            android:textSize="@dimen/query_dialog_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dialog_margin_top"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="班级名称 "
            android:textColor="@color/search_default_color"
            android:textSize="@dimen/query_dialog_text_size" />

        <EditText
            android:id="@+id/text_gradeName"
            android:layout_width="0.0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_input_query"
            android:padding="5dp"
            android:tag="班级名称："
            android:textColor="@color/search_textColor"
            android:textSize="@dimen/query_dialog_text_size" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dialog_margin_top"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="教室名称 "
            android:textColor="@color/search_default_color"
            android:textSize="@dimen/query_dialog_text_size" />

        <EditText
            android:id="@+id/text_classroomName"
            android:layout_width="0.0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_input_query"
            android:padding="5dp"
            android:tag="教室名称："
            android:textColor="@color/search_textColor"
            android:textSize="@dimen/query_dialog_text_size" />
    </LinearLayout>


    <Button
        android:id="@+id/btn_clear"
        android:layout_width="@dimen/px_80"
        android:layout_height="@dimen/px_40"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@null"
        android:text="清空"
        android:textColor="@color/search_textColor"
        android:textSize="@dimen/query_dialog_btn_text_size" />

</LinearLayout>

