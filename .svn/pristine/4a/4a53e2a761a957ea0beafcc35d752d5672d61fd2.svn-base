<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="@dimen/px_100"
        android:layout_height="@dimen/px_3"
        android:src="@drawable/line_dotted"
        android:layout_marginEnd="@dimen/px_16"
        android:layout_marginRight="@dimen/px_16"
        android:layerType="software" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/activity_login_enter_lock" />

    <ImageView
        android:layout_width="@dimen/px_100"
        android:layout_height="@dimen/px_3"
        android:background="@drawable/line_dotted"
        android:layout_marginStart="@dimen/px_16"
        android:layout_marginLeft="@dimen/px_16"
        android:layerType="software" />
</LinearLayout>
