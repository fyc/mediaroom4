<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/template_background">


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/px_205"
        android:text="账号登录"
        android:textColor="@android:color/white"
        android:textSize="@dimen/px_36"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageButton
        android:id="@+id/btn_switch"
        android:layout_width="@dimen/px_48"
        android:layout_height="@dimen/px_48"
        android:layout_marginLeft="@dimen/px_14"
        android:layout_toRightOf="@+id/title"
        android:background="@null"
        android:padding="@dimen/px_8"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_switch"
        app:layout_constraintBottom_toBottomOf="@id/title"
        app:layout_constraintLeft_toRightOf="@id/title"
        app:layout_constraintTop_toTopOf="@id/title" />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="@dimen/px_130"
        android:layout_height="@dimen/px_72"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/px_30"
        android:layout_marginRight="@dimen/px_30"
        android:background="@drawable/btn_background_confirm"
        android:text="返回"
        android:textColor="#FFFEFFFF"
        android:textSize="@dimen/px_18"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/edt_user"
        android:layout_width="@dimen/px_270"
        android:layout_height="@dimen/px_40"
        android:layout_marginLeft="@dimen/px_20"
        android:layout_marginTop="@dimen/px_365"
        android:background="@drawable/template_input_background"
        android:hint="请输入用户名"
        android:maxLines="1"
        android:paddingLeft="@dimen/px_13"
        android:singleLine="true"
        android:textColorHint="#FFA5AEBD"
        android:textSize="@dimen/px_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/px_20"
        android:text="账号"
        android:textColor="#FFFFFFFF"
        android:textSize="@dimen/px_18"
        app:layout_constraintBottom_toBottomOf="@id/edt_user"
        app:layout_constraintRight_toLeftOf="@id/edt_user"
        app:layout_constraintTop_toTopOf="@id/edt_user" />


    <EditText
        android:id="@+id/edt_password"
        android:layout_width="@dimen/px_270"
        android:layout_height="@dimen/px_40"
        android:layout_marginTop="@dimen/px_20"
        android:background="@drawable/template_input_background"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:maxLines="1"
        android:paddingLeft="@dimen/px_13"
        android:textColorHint="#FFA5AEBD"
        android:textSize="@dimen/px_16"
        app:layout_constraintLeft_toLeftOf="@id/edt_user"
        app:layout_constraintTop_toBottomOf="@id/edt_user" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/px_20"
        android:text="密码"
        android:textColor="#FFFFFFFF"
        android:textSize="@dimen/px_18"
        app:layout_constraintBottom_toBottomOf="@id/edt_password"
        app:layout_constraintRight_toLeftOf="@id/edt_password"
        app:layout_constraintTop_toTopOf="@id/edt_password" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="@dimen/px_270"
        android:layout_height="@dimen/px_74"
        android:layout_marginTop="80dp"
        android:background="@drawable/btn_background_confirm"
        android:text="登录"
        android:textColor="@android:color/white"
        android:textSize="@dimen/px_18"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edt_password" />

</android.support.constraint.ConstraintLayout>