<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/px_20"
    android:paddingTop="@dimen/px_12"
    android:paddingRight="@dimen/px_20"
    android:paddingBottom="@dimen/px_12"
    android:background="@drawable/selector_control_center_device_item">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/px_30"
        android:layout_height="@dimen/px_30"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_12"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:singleLine="true"
        android:text="新风机22222222222"
        android:textColor="#FFF"
        android:textSize="@dimen/px_18"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/icon"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>
