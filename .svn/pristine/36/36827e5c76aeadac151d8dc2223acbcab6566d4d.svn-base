<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/dialog_background"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/px_38">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_20"
            android:text="@string/tipe_classover_cause"
            android:textColor="?device_black_text_color"
            android:textSize="?common_menu_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_30"
            android:layout_marginBottom="@dimen/px_30"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@id/dialog_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_enable_no_padding"
                android:paddingLeft="@dimen/px_35"
                android:paddingTop="@dimen/px_15"
                android:paddingRight="@dimen/px_35"
                android:paddingBottom="@dimen/px_15"
                android:text="@string/confirm"
                android:textColor="?common_text_color" />

            <Button
                android:id="@id/dialog_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_30"
                android:background="@drawable/button_disable"
                android:paddingLeft="@dimen/px_35"
                android:paddingTop="@dimen/px_15"
                android:paddingRight="@dimen/px_35"
                android:paddingBottom="@dimen/px_15"
                android:text="@string/cancel"
                android:textColor="?common_text_color" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
