package com.sunmnet.mediaroom.brand.interfaces.control;

/**
 * 课程组件的共通属性
 */

public interface ICourseAttrs {


    /**
     * 设置匹配星期，0为自动匹配，1-7对应周一到周日
     *
     * @param week 星期
     */
    void setWeek(String week);

    /**
     * 设置匹配课节，0为自动匹配，其余为匹配对应课节，双课节用逗号隔开
     *
     * @param classNo 课节数
     */
    void setClassNo(String classNo);

    /**
     * 返回匹配星期，0为自动匹配，1-7对应周一到周日
     */
    String getWeek();

    /**
     * 返回匹配课节，0为自动匹配，其余为匹配对应课节，双课节用逗号隔开
     */
    String getClassNo();
}
