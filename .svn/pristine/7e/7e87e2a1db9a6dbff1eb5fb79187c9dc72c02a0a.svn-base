            android:id="@+id/btn_swipe_card_login"
            android:layout_width="190px"
            android:layout_height="70px"
            android:layout_marginLeft="1690px"
            android:layout_marginTop="194px"
            android:background="@drawable/template_btn_background_enable"
            android:gravity="center"
            android:text="刷卡快速签到"
            android:textColor="#FEFFFF"
