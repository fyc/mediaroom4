            android:textSize="15px" />

        <TextView
            android:layout_width="22px"
            android:layout_height="20px"
            android:layout_marginLeft="1110px"
            android:layout_marginTop="227px"
            android:gravity="center_vertical"
            android:text="人"
            android:textColor="#FFFFFF"
            android:textSize="15px" />

        <ImageView
