            android:layout_height="200px"
            android:layout_marginLeft="1288px"
            android:layout_marginTop="268px"
            android:background="@color/bg_template_content">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/template_background_corner2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16px"
                android:orientation="vertical">

                <com.sunmnet.mediaroom.brand.view.AutoScrollView
                    android:layout_width="match_parent"
                    android:layout_height="140px"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:text="博学之、审问之、慎思之、明辨之、笃行之\n\n"
                        android:textColor="#FFFFFFFF"
                        android:textSize="24px"
                        android:textStyle="bold" />

                </com.sunmnet.mediaroom.brand.view.AutoScrollView>

                <TextView
                    android:id="@+id/sign"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="———— 教务处"
                    android:textColor="#FF3EF2C3"
                    android:textSize="16px" />
            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:layout_width="594px"
            android:layout_height="550px"
            android:layout_marginLeft="1287px"
            android:layout_marginTop="485px"
            android:background="@color/bg_template_content">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/template_background_corner2" />

            <com.sunmnet.mediaroom.brand.control.media.PictureControl
                android:id="@+id/picture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16px" />

        </FrameLayout>

