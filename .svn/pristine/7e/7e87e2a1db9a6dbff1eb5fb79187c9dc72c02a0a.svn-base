            android:visibility="gone" />

        <Button
            android:id="@+id/btn_face_uname"
            android:layout_width="190px"
            android:layout_height="70px"
            android:layout_marginLeft="1290px"
            android:layout_marginTop="194px"
            android:background="@drawable/template_btn_background_disable"
            android:gravity="center"
            android:text="个人门户登录"
            android:textColor="#D0FFFA"
            android:textSize="18px" />

        <Button
            android:id="@+id/btn_face_login"
            android:layout_width="190px"
            android:layout_height="70px"
            android:layout_marginLeft="1490px"
            android:layout_marginTop="194px"
            android:background="@drawable/template_btn_background_enable"
            android:gravity="center"
            android:text="人脸快速签到"
            android:textColor="#FEFFFF"
            android:textSize="18px" />

