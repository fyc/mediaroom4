<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="@dimen/px_600"
        android:layout_height="@dimen/px_325"
        android:layout_gravity="center"
        android:background="@drawable/dialog_background"
        android:gravity="center"
        android:orientation="vertical">

        <com.sunmnet.mediaroom.tabsp.ui.widget.CountDownProgress
            android:id="@id/dialog_countdown"
            android:layout_width="@dimen/px_172"
            android:layout_height="@dimen/px_172"
            app:circleColor="?common_text_color"
            app:countTime="50"
            app:countdown_radius="@dimen/px_50"
            app:ringBgColor="?device_off_background_color"
            app:ringColor="?colorPrimary"
            app:ringTextColor="?device_black_text_color"
            app:strokeWidth="@dimen/px_10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_46"
            android:text="@string/device_closing"
            android:textColor="?device_black_text_color"
            android:textSize="@dimen/px_30" />
    </LinearLayout>
</FrameLayout>
