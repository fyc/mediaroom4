<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/px_240"
    android:layout_height="@dimen/px_240"
    android:background="@drawable/device_close_drawable"
    android:gravity="center"
    android:padding="10dp">

    <ProgressBar
        android:id="@+id/progressing"
        style="@style/progressbar_style"
        android:layout_width="@dimen/px_120"
        android:layout_height="@dimen/px_120"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/device_image"
            android:layout_width="@dimen/px_140"
            android:layout_height="@dimen/px_140"
            android:padding="12dp"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/device_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/px_10"
            android:paddingBottom="@dimen/px_10"
            android:textColor="@android:color/white"
            android:textSize="@dimen/px_18" />
    </LinearLayout>
</FrameLayout>