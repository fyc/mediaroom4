<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/device_controll_panel_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/device_type_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/controll_panel_color"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingTop="8dp"
        android:paddingBottom="10dp" />

    <GridView
        android:id="@+id/device_gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:horizontalSpacing="10dp"
        android:layout_margin="@dimen/px_30"
        android:numColumns="5"
        android:verticalSpacing="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/all_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="全开" />

        <Button
            android:id="@+id/all_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全关" />
    </LinearLayout>
</LinearLayout>